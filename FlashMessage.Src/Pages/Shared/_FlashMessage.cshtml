@{
    string text = string.IsNullOrEmpty((string)TempData["FlashMessage.Text"]) ? string.Empty : (string)TempData["FlashMessage.Text"];
    string title = string.IsNullOrEmpty((string)TempData["FlashMessage.Title"]) ? string.Empty : (string)TempData["FlashMessage.Title"];
    string type = (string)TempData["FlashMessage.Type"];
    bool dismissible = Convert.ToBoolean((string)TempData["FlashMessage.Dismissible"]);

}

@if (!string.IsNullOrEmpty(text))
{
    <div class="alert alert-@type @(dismissible ? "alert-dismissible" : null) fade show" role="alert">
        @if (!string.IsNullOrEmpty(title))
        {
            <h4 class="alert-heading text-center">@title</h4>
        }

        <p class="text-center">@text</p>

        @if (dismissible)
        {
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        }
    </div>
}
